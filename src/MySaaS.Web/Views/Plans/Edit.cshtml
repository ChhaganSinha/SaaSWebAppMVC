@model PlanFormModel

@{
    ViewData["Title"] = "Edit Plan";
}

<div class="card">
    <h2>Edit Plan</h2>
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="form-grid">
            <div class="form-field">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-field">
                <label asp-for="PricePerMonth"></label>
                <input asp-for="PricePerMonth" />
                <span asp-validation-for="PricePerMonth"></span>
            </div>
            <div class="form-field">
                <label asp-for="MaxUsers"></label>
                <input asp-for="MaxUsers" />
                <span asp-validation-for="MaxUsers"></span>
            </div>
            <div class="form-field">
                <label asp-for="IsActive"></label>
                <input asp-for="IsActive" type="checkbox" />
            </div>
        </div>
        <div class="form-actions">
            <button class="button" type="submit">Update</button>
            <a class="button secondary" href="@Url.Action("Index")">Cancel</a>
        </div>
    </form>
</div>
