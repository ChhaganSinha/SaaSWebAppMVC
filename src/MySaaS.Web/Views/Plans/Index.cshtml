@model List<MySaaS.Domain.Entities.SubscriptionPlan>

@{
    ViewData["Title"] = "Plans";
}

<div class="card">
    <div class="actions">
        <a class="button" href="@Url.Action("Create")">Add Plan</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price/Month</th>
                <th>Max Users</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var plan in Model)
            {
                <tr>
                    <td>@plan.Name</td>
                    <td>@plan.PricePerMonth.ToString("C")</td>
                    <td>@plan.MaxUsers</td>
                    <td>@(plan.IsActive ? "Active" : "Inactive")</td>
                    <td>
                        <div class="actions">
                            <a class="button secondary" href="@Url.Action("Edit", new { id = plan.Id })">Edit</a>
                            <form method="post" action="@Url.Action("Delete", new { id = plan.Id })">
                                @Html.AntiForgeryToken()
                                <button class="button danger" type="submit">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
