@model TenantFormModel

@{
    ViewData["Title"] = "Edit Tenant";
}

<div class="card">
    <h2>Edit Tenant</h2>
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="form-grid">
            <div class="form-field">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-field">
                <label asp-for="Slug"></label>
                <input asp-for="Slug" />
                <span asp-validation-for="Slug"></span>
            </div>
            <div class="form-field">
                <label asp-for="ContactEmail"></label>
                <input asp-for="ContactEmail" />
                <span asp-validation-for="ContactEmail"></span>
            </div>
            <div class="form-field">
                <label asp-for="IsActive"></label>
                <input asp-for="IsActive" type="checkbox" />
            </div>
        </div>
        <div class="form-actions">
            <button class="button" type="submit">Update</button>
            <a class="button secondary" href="@Url.Action("Index")">Cancel</a>
        </div>
    </form>
</div>
