@model MySaaS.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="form-card">
    <h1>Sign in</h1>
    <p class="muted">Use your admin email and password to access the portal.</p>
    <form asp-action="Login" method="post">
        <div class="form-field">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-field">
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-checkbox">
            <input asp-for="RememberMe" />
            <label asp-for="RememberMe"></label>
        </div>
        <button class="button" type="submit">Login</button>
    </form>
    <div class="login-hint">
        <p><strong>Super admin</strong>: superadmin@mysaas.local / Admin123!</p>
        <p><strong>Tenant admin</strong>: use the tenant contact email / Tenant123!</p>
    </div>
</section>
