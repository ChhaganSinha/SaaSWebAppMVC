@model MySaaS.Web.Models.UserIndexViewModel

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a class="button" href="@Url.Action("Create")">Add user</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Tenant</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.TenantName</td>
            <td>@user.Roles</td>
        </tr>
    }
    </tbody>
</table>
