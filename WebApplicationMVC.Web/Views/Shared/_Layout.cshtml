@inject IPageAccessService PageAccessService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplicationMVC.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplicationMVC.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="app-layout">
        <aside class="app-sidebar">
            <div class="app-sidebar__brand">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="app-sidebar__logo" aria-hidden="true">WA</span>
                    <span class="app-sidebar__brand-text">
                        WebApplicationMVC
                        <span class="app-sidebar__brand-subtitle">Workspace Hub</span>
                    </span>
                </a>
            </div>
            <nav class="app-sidebar__nav">
                <div class="app-sidebar__section-label">Main</div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <span class="app-sidebar__nav-icon" aria-hidden="true">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                                    <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6a.5.5 0 1 0 .708.708L2.5 7.707V14.5A1.5 1.5 0 0 0 4 16h2.5v-4.5h3V16H12a1.5 1.5 0 0 0 1.5-1.5V7.707l.146.147a.5.5 0 0 0 .708-.708l-6-6z"/>
                                </svg>
                            </span>
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                            <span class="app-sidebar__nav-icon" aria-hidden="true">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                                    <path d="M8 0c-.69 0-1.36.072-2 .21V4a2 2 0 1 0 4 0V.21A8.09 8.09 0 0 0 8 0zm3.5 2.069V4a3.5 3.5 0 0 1-7 0V2.069A8 8 0 1 0 11.5 2.07z"/>
                                </svg>
                            </span>
                            Privacy
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="app-sidebar__nav-icon" aria-hidden="true">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                                    <path d="M8.985 1.566a1 1 0 0 0-1.97 0l-.2 1.333a1 1 0 0 1-.79.832l-1.35.27a1 1 0 0 0-.52 1.715l.99.99a1 1 0 0 1 .287.89l-.27 1.35a1 1 0 0 0 1.715.52l.99-.99a1 1 0 0 1 .89-.287l1.35.27a1 1 0 0 0 1.165-1.165l-.27-1.35a1 1 0 0 1 .287-.89l.99-.99a1 1 0 0 0-.52-1.715l-1.35-.27a1 1 0 0 1-.79-.832l-.2-1.333zM8 10.5a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5z"/>
                                </svg>
                            </span>
                            Settings
                        </a>
                    </li>
                </ul>
                <div class="app-sidebar__section-label">Access</div>
                <ul class="nav flex-column">
                    @if (PageAccessService.HasAccess(User.Identity?.Name, "Home/Edit", AccessLevel.Edit))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Edit">
                                <span class="app-sidebar__nav-icon" aria-hidden="true">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706l-1.02 1.02-2.121-2.122 1.02-1.02a.5.5 0 0 1 .707 0l1.414 1.416zM13.06 4.56 3 14.621V16h1.379L14.44 5.94 13.06 4.56zM2 13.621 11.94 3.68 9.819 1.56 2 9.379v4.242z"/>
                                    </svg>
                                </span>
                                Edit
                            </a>
                        </li>
                    }
                    @if (PageAccessService.HasAccess(User.Identity?.Name, "Home/Admin", AccessLevel.Full))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Admin">
                                <span class="app-sidebar__nav-icon" aria-hidden="true">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                                        <path d="M8 0a5 5 0 0 0-5 5v2H2a1 1 0 0 0-1 1v6a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V8a1 1 0 0 0-1-1h-1V5a5 5 0 0 0-5-5zm3 7H5V5a3 3 0 0 1 6 0v2z"/>
                                    </svg>
                                </span>
                                Full Access
                            </a>
                        </li>
                    }
                </ul>
            </nav>
            <div class="app-sidebar__promo">
                <div class="app-sidebar__promo-title">Need help?</div>
                <p>Visit the knowledge base or contact support for quick onboarding.</p>
                <button class="btn btn-light app-sidebar__promo-button" type="button">Open Support</button>
            </div>
        </aside>
        <div class="app-main">
            <header class="app-header">
                <div class="app-header__title">Dashboard</div>
                <div class="app-header__actions">
                    <button class="btn btn-light app-header__icon" type="button" aria-label="Notifications">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                            <path d="M8 16a2 2 0 0 0 1.985-1.75H6.015A2 2 0 0 0 8 16zm.104-14.003a1 1 0 1 0-2.208 0A5.002 5.002 0 0 0 3 6c0 1.098-.5 2.19-1.342 2.993A1 1 0 0 0 2.382 11h11.236a1 1 0 0 0 .724-2.007A4.995 4.995 0 0 1 13 6a5.002 5.002 0 0 0-2.896-4.003z"/>
                        </svg>
                    </button>
                    <div class="dropdown">
                        <button class="btn btn-light dropdown-toggle app-header__profile" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="app-header__profile-name">@((User.Identity?.IsAuthenticated == true ? User.Identity?.Name : "Profile"))</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">Sign Out</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Login">Sign In</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </header>
            <main role="main" class="app-content">
                @RenderBody()
            </main>
            <footer class="border-top footer text-muted app-footer">
                <div class="container-fluid">
                    &copy; 2026 - WebApplicationMVC.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
