@inject IPageAccessService PageAccessService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplicationMVC.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplicationMVC.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="app-layout">
        <aside class="app-sidebar">
            <div class="app-sidebar__brand">
                <a asp-area="" asp-controller="Home" asp-action="Index">WebApplicationMVC.Web</a>
            </div>
            <nav class="app-sidebar__nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    @if (PageAccessService.HasAccess(User.Identity?.Name, "Home/Edit", AccessLevel.Edit))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Edit">Edit</a>
                        </li>
                    }
                    @if (PageAccessService.HasAccess(User.Identity?.Name, "Home/Admin", AccessLevel.Full))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Admin">Full Access</a>
                        </li>
                    }
                </ul>
            </nav>
        </aside>
        <div class="app-main">
            <header class="app-header">
                <div class="app-header__title">Dashboard</div>
                <div class="app-header__actions">
                    <button class="btn btn-light app-header__icon" type="button" aria-label="Notifications">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                            <path d="M8 16a2 2 0 0 0 1.985-1.75H6.015A2 2 0 0 0 8 16zm.104-14.003a1 1 0 1 0-2.208 0A5.002 5.002 0 0 0 3 6c0 1.098-.5 2.19-1.342 2.993A1 1 0 0 0 2.382 11h11.236a1 1 0 0 0 .724-2.007A4.995 4.995 0 0 1 13 6a5.002 5.002 0 0 0-2.896-4.003z"/>
                        </svg>
                    </button>
                    <div class="dropdown">
                        <button class="btn btn-light dropdown-toggle app-header__profile" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="app-header__profile-name">@((User.Identity?.IsAuthenticated == true ? User.Identity?.Name : "Profile"))</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">Sign Out</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Login">Sign In</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </header>
            <main role="main" class="app-content">
                @RenderBody()
            </main>
            <footer class="border-top footer text-muted app-footer">
                <div class="container-fluid">
                    &copy; 2026 - WebApplicationMVC.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
